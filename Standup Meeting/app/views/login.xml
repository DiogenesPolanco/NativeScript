<Page  loaded="pageLoaded" xmlns="http://schemas.nativescript.org/tns.xsd">
        <page.actionBar>
            <action-bar title="Sign in" />
        </page.actionBar>
        <scroll-view>
            <stack-layout orientation="vertical"> 
                <Image src="~/images/SXlogo.png" stretch="none" horizontalAlignment="center" />  
                
                <TextField hint="Email Address" id="username"  text="{{ username }}" keyboardType="email" keyboardType="email" returnKeyType="next" returnPress="focusPassword" autocorrect="false" autocapitalizationType="none" row="0"  />
                <TextField hint="Password"  id="password" text="{{ password }}" secure="true" returnKeyType="done" returnPress="loginButtonTap" row="1" />
            
                <Button text="Sign in"  tap="loginButtonTap" />  
            </stack-layout>    
        </scroll-view> 
</Page>
 