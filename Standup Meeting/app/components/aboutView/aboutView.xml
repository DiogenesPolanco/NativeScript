<Page xmlns="http://www.nativescript.org/tns.xsd" xmlns:widgets="utils/widgets" loaded="pageLoaded" actionBarHidden="true">

    <GridLayout rows="auto, *">
        <widgets:action-bar />
        <StackLayout row="1">

            <StackLayout margin="10">
                <GridLayout rows="25, auto" columns="auto, auto">

                    <Label col="1" text="My App" verticalAlignment="top" />

                    <Label row="1" col="1" text="Version 1" verticalAlignment="top" />
                </GridLayout>

                <TextView text="App description" editable="false" />

                <Button text="Contact us" tap="{{ onContactTap }}" />

                <Button text="Like us on Facebook" tap="{{ onFacebookTap }}" />

                <Button text="Follow us on Twitter" tap="{{ onTwitterTap }}" />
            </StackLayout>
            <!-- additional view content -->

            <!-- START_CUSTOM_CODE_aboutView -->
            <!-- Add custom code here. For more information about custom code, see http://docs.telerik.com/platform/screenbuilder/troubleshooting/how-to-keep-custom-code-changes -->

            <!-- END_CUSTOM_CODE_aboutView -->
        </StackLayout>
    </GridLayout>
</Page>